<div class='container'>
  <div class='row'>
    <div class='col s12'>
      {{#md-card title="Monthly Temperatures at Death Valley, CA"
        titleClass="orange-text"}}

        {{#md-card-content}}
          <div class='row'>
            <div class='col s3'>
              {{ember-dropdown content=selectOptions selected=(mut selectedOption)}}
            </div>
            <div class='col s12'>
              {{highcharts-chart chartData=chartData chartOptions=chartOptions}}
            </div>
          </div>
        {{/md-card-content}}
      {{/md-card}}
    </div>
  </div>
</div>
